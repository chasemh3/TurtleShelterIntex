<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Request Form</title>
    <link rel="stylesheet" href="css/formstyles.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <header class="hero">
        <nav>
            <div class="logo-container">
                <img src="/images/logo.png" alt="Logo" class="logo">
                <span class="company-name">TURTLE SHELTER <br>PROJECT</span>
            </div> 
            <ul>
                <li><a href="/">HOME</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle">ABOUT</a>
                    <ul class="dropdown-menu">
                        <li><a href="/ourtech">Our Tech</a></li>
                        <li><a href="/jensstory">Our Story</a></li>
                        <li><a href="/FAQ">FAQ</a></li>
                    </ul>
                </li>
                <li><a href="/volunteerForm">VOLUNTEER</a></li>
                <li><a href="/eventRequest">EVENT REQUEST</a></li>
                <li><a href="https://turtleshelterproject.org/donate">DONATE</a></li>
                <li><a href="/login">LOGIN</a></li>
            </ul>
        </nav>
    </header>
    <div class="form-wrapper">
        <div class="form-image">
            <img src="images/volunteers.png" alt="Form Illustration">
        </div>
        <div class="form-container">
            <h1 class="form-title">Event Request Form</h1>
            <form id="event-request-form" action="/submit-event" method="post">
                <label for="eventName" class="form-label">Event Name:</label>
                <input type="text" id="eventName" name="eventName" class="form-input" required>
                <br>
                <label for="eventType">What type of event is this?</label>
                <br>
                <select id="eventType" name="eventType" required>
                    <option value="">Select an option</option>
                    <option value="sewing">Sewing</option>
                    <option value="non-sewing">Non-sewing</option>
                    <option value="both">Both</option>
                </select>
                <br><br>
                <label for="eventDate" class="form-label">Event Date:</label>
                <input type="date" id="eventDate" name="eventDate" class="form-input" required>
                <br>
                <label for="eventTime" class="form-label">Event Start Time:</label>
                <input type="time" id="eventTime" name="eventTime" class="form-input" required>
                <br>
                <label for="eventState" class="form-label">Event State:</label>
                <input type="text" id="eventState" name="eventState" class="form-input" required>
                <br>
                <label for="eventCity" class="form-label">Event City:</label>
                <input type="text" id="eventCity" name="eventCity" class="form-input" required>
                <br>
                <label for="eventStreetAddress" class="form-label">Event Street Address:</label>
                <input type="text" id="eventStreetAddress" name="eventStreetAddress" class="form-input" required>
                <br>
                <label for="eventZip" class="form-label">Event Zip:</label>
                <input type="text" id="eventZip" name="eventZip" class="form-input" required>
                <br>
                <label for="numAttendees" class="form-label">Total Number of Attendees:</label>
                <input type="number" id="numAttendees" name="numAttendees" class="form-input" min="1" required>
                <br>
                <label for="numSewers" class="form-label">Number of Sewers:</label>
                <input type="number" id="numSewers" name="numSewers" class="form-input" min="0">
                <br>
                <label for="numUnder10" class="form-label">Number of Attendees Under 10 Years Old:</label>
                <input type="number" id="numUnder10" name="numUnder10" class="form-input" min="0">
                <br>
                <label for="jenStoryDropdown">Would you like a story from Jen?</label>
                <select id="jenStoryDropdown" name="jenStoryDropdown" required>
                    <option value="">Select an option</option>
                    <option value="yes">Yes</option>
                    <option value="no">No</option>
                </select><br>
        
                <!-- Conditional inputs for Jen's story -->
                <div id="jenStoryDetails" style="display: none;">
                    <label for="storyLength">Preferred Story Length:</label>
                    <select id="storyLength" name="storyLength">
                        <option value="">Select an option</option>
                        <option value="short">Short</option>
                        <option value="long">Long</option>
                    </select><br><br>
                </div>
                <br>
                <label for="numMachines" class="form-label">Number of Sewing Machines Host Can Provide:</label>
                <input type="number" id="numMachines" name="numMachines" class="form-input" min="0">
                <br>
                <label for="locationDescription" class="form-label">Location Description:</label>
                <br>
                <textarea id="locationDescription" name="locationDescription" class="form-textarea" rows="4" cols="50" placeholder="How many people, tables, and machines can your location accommodate?"></textarea>
                <br><br>
                <button type="submit" class="form-button">Submit</button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const jenStoryDropdown = document.getElementById("jenStoryDropdown");
            const jenStoryDetails = document.getElementById("jenStoryDetails");

            jenStoryDropdown.addEventListener("change", function () {
                if (jenStoryDropdown.value === "yes") {
                    jenStoryDetails.style.display = "block";
                } else {
                    jenStoryDetails.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>
