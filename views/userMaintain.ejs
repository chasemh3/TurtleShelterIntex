<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Maintenance</title>
    <link rel="stylesheet" href="/css/maintain.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <a href="/internalIndex" class="home-button">Home</a>
    <h1>Users</h1>
    <div class="table-container">
    <table border="1">
        
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% user.forEach(admin => { %>
                    <tr>
                        <td><%= admin.adminfirstname %></td>
                        <td><%= admin.adminlastname %></td>
                <td>
                    <form action="/editUser/<%= user.adminid %>" method="GET" style="display:inline;">
                        <button class="edit-btn" type="submit">Edit</button>
                    </form>
                    <form action="/deleteUser" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="adminid" value="<%= user.adminid %>">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        </tbody>
        <% }) %>
    </table>
</div>
    <br>
    <form action="/addUser" method="GET">
        <button class="add-btn" type="submit">Add User</button>
    </form>
</body>
</html>
