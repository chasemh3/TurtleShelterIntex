<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Maintenance</title>
    <link rel="stylesheet" href="styles/editstyles.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <nav>
            <div class=“logo-container”>
                <img src="/images/logo.png" alt=“Logo” class=“logo”>
                <span class=“company-name”>TURTLE SHELTER <br>PROJECT</span>
            </div>
            <ul>
                <li><a href=“/”>HOME</a></li>
                <li><a href=“/volunteerForm”>VOLUNTEER</a></li>
                <li><a href=“/eventRequest”>EVENT REQUEST</a></li>
                <li><a href=“https://turtleshelterproject.org/donate”>DONATE</a></li>
                <li><a href=“/login”>LOGIN</a></li>
            </ul>
        </nav>
    </header>
    <h1>User Maintenance</h1>
    <div class="table-container">
    <table border="1">
        
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.adminfirstname %></td>
                <td><%= user.adminlastname %></td>
                <td>
                    <form action="/editUser/<%= user.adminid %>" method="GET" style="display:inline;">
                        <button class="edit-btn" type="submit">Edit</button>
                    </form>
                    <form action="/deleteUser" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="adminid" value="<%= user.adminid %>">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        </tbody>
        <% }) %>
    </table>
</div>
    <br>
    <form action="/addUser" method="GET">
        <button class="add-btn" type="submit">Add User</button>
    </form>
</body>
</html>
