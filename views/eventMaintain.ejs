<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Maintenance</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/eventMaintain.css">
</head>
<body>
     <!-- Home Button -->
     <a href="/internalIndex" class="home-button">Home</a>
    <h1>Event Maintenance</h1>
    <div class="table-container">
        <table border="1">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Event Name</th>
                    <th>Contact Last Name</th>
                    <th>Event Status</th>
                    <th>Event Type</th>
                    <th>Event Date</th>
                    <th>Start Time</th>
                    <th>Estimated Duration</th>
                    <th>Contact Phone</th>
                    <th>Contact Email</th>
                    <th>Street Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip Code</th>
                    <th>Total Attending</th>
                    <th>Jen Sharing Story?</th>
                    <th>Story Length</th>
                    <th>Total Under age 10</th>
                    <th>Total Sewers</th>
                    <th>Total Sewing Machines</th>
                    <th>Location Description</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                <tr>
                    <td>
                        <form action="/editEvent/<%= event.eventid %>" method="GET" style="display:inline;">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/deleteEvent" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                            <input type="hidden" name="eventID" value="<%= event.eventid %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                    <td><%= event.eventname %></td>
                    <td><%= event.eventcontactlastname %></td>
                    <td><%= event.eventstatus %></td>
                    <td><%= event.eventtype %></td>
                    <td><%= `${event.eventyear}/${event.eventmonth}/${event.eventday}` %></td>
                    <td><%= event.starttime %></td>
                    <td><%= event.estimatedduration %></td>
                    <td><%= event.eventcontactphone %></td>
                    <td><%= event.eventcontactemail %></td>
                    <td><%= event.eventstreetaddress %></td>
                    <td><%= event.eventcity %></td>
                    <td><%= event.eventstate %></td>
                    <td><%= event.eventzipcode %></td>
                    <td><%= event.numattending %></td>
                    <td><%= event.jensharestory ? "Yes" : "No" %></td>
                    <td><%= event.storylength %></td>
                    <td><%= event.under10amount %></td>
                    <td><%= event.numsewers %></td>
                    <td><%= event.numhostsewingmachines %></td>
                    <td><%= event.locationdescription %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <br>
    <form action="/addEvent" method="GET">
        <button type="submit">Add Event</button>
    </form>
</body>
</html>
