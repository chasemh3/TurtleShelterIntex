<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteers</title>
    <link rel="stylesheet" href="/css/maintain.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <h1 class="vol">Volunteers</h1>
    <div class="table-footer-button">
        <form action="/addVolunteer" method="GET">
            <button class="add-btn" type="submit">Add Volunteer</button>
        </form>
    </div>
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>How Found</th>
                <th>Sewing Level</th>
                <th>Hours/Week</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% volunteers.forEach(volunteer => { %>
            <tr>
                <td><%= volunteer.volid %></td>
                <td><%= volunteer.volfirstname %></td>
                <td><%= volunteer.vollastname %></td>
                <td><%= volunteer.volphone %></td>
                <td><%= volunteer.wherefound %></td>
                <td><%= volunteer.sewinglevel %></td>
                <td><%= volunteer.numhoursvolunteering %></td>
                <td>
                    <form action="/editVolunteer/<%= volunteer.volid %>" method="GET" style="display:inline;">
                        <button class="edit-btn" type="submit">Edit</button>
                    </form>
                    <form action="/deleteVolunteer" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="volid" value="<%= volunteer.volid %>">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>

