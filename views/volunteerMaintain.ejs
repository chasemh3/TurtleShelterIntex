<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteers</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        button {
            padding: 5px 10px;
            margin: 2px;
            cursor: pointer;
        }
        .edit-btn {
            background-color: #4CAF50;
            color: white;
            border: none;
        }
        .delete-btn {
            background-color: #f44336;
            color: white;
            border: none;
        }
    </style>
</head>
<body>
    <h1>Volunteers List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>How Found</th>
                <th>Sewing Level</th>
                <th>Hours/Week</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% volunteers.forEach(volunteer => { %>
            <tr>
                <td><%= volunteer.volid %></td>
                <td><%= volunteer.volfirstname %></td>
                <td><%= volunteer.vollastname %></td>
                <td><%= volunteer.volphone %></td>
                <td><%= volunteer.wherefound %></td>
                <td><%= volunteer.sewinglevel %></td>
                <td><%= volunteer.numhoursvolunteering %></td>
                <td>
                    <a href="/editVolunteer/<%= volunteer.volid %>">
                        <button class="edit-btn">Edit</button>
                    </a>
                    <form action="/delete/<%= volunteer.volid %>" method="POST" style="display:inline;">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
            <a href="/addVolunteer">
                <button class="add-btn">Add</button>
            </a>
        </tbody>
    </table>
</body>
</html>
