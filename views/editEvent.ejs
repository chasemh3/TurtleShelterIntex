<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <a href="/eventMaintain" class="home-button">Back</a>
    <h1>Edit Event</h1>
    <form action="/editEvent/<%= event.eventid %>" method="POST">
        <label for="eventName">Event Name:</label>
        <input type="text" id="eventName" name="eventName" value="<%= event.eventname %>" required>
        <br>

        <label for="eventDate">Event Date:</label>
        <input type="date" id="eventDate" name="eventDate" value="<%= event.eventdate %>" required>
        <br>

        <label for="eventTime">Event Start Time:</label>
        <input type="time" id="eventTime" name="eventTime" value="<%= event.eventtime %>" required>
        <br>

        <label for="eventLocation">Event Location:</label>
        <input type="text" id="eventLocation" name="eventLocation" value="<%= event.eventlocation %>" required>
        <br>

        <label for="numAttendees">Number of Attendees:</label>
        <input type="number" id="numAttendees" name="numAttendees" value="<%= event.numattendees %>" min="1" required>
        <br>

        <label for="jenStory">Would you like a story from Jen?</label>
        <select id="jenStory" name="jenStory" required>
            <option value="" <% if (!event.jenstory) { %> selected <% } %>>Select an option</option>
            <option value="yes" <% if (event.jenstory === 'yes') { %> selected <% } %>>Yes</option>
            <option value="no" <% if (event.jenstory === 'no') { %> selected <% } %>>No</option>
        </select>
        <br>

        <!-- Conditional inputs for Jen's story -->
        <div id="jenStoryDetails" style="display: <%= event.jenstory === 'yes' ? 'block' : 'none' %>;">
            <label for="storyLength">Preferred Story Length:</label>
            <select id="storyLength" name="storyLength">
                <option value="" <% if (!event.storylength) { %> selected <% } %>>Select an option</option>
                <option value="short" <% if (event.storylength === 'short') { %> selected <% } %>>Short</option>
                <option value="long" <% if (event.storylength === 'long') { %> selected <% } %>>Long</option>
            </select>
            <br>
        </div>

        <label for="numUnder10">Number of Attendees Under 10 Years Old:</label>
        <input type="number" id="numUnder10" name="numunder10" value="<%= event.numunder10 %>" min="0">
        <br>

        <label for="numSewers">Number of Sewers:</label>
        <input type="number" id="numSewers" name="numSewers" value="<%= event.numsewers %>" min="0">
        <br>

        <label for="numMachines">Number of Sewing Machines Host Can Provide:</label>
        <input type="number" id="numMachines" name="numMachines" value="<%= event.nummachines %>" min="0">
        <br>

        <label for="locationDescription">Location Description:</label>
        <textarea id="locationDescription" name="locationDescription" rows="4" cols="50"><%= event.locationdescription %></textarea>
        <br>

        <button type="submit">Submit</button>
    </form>
    <form action="/eventMaintain" method="GET">
        <button type="submit">Back</button>
    </form>

    <script>
        // Show/Hide story length input based on Jen's story response
        const jenStory = document.getElementById('jenstory');
        const jenStoryDetails = document.getElementById('jenstorydetails');

        jenStory.addEventListener('change', function () {
            if (jenStory.value === 'yes') {
                jenStoryDetails.style.display = 'block';
            } else {
                jenStoryDetails.style.display = 'none';
            }
        });
    </script>
</body>
</html>
